<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp" >

        <ImageView
            android:id="@+id/driver_imageView1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/photo"
            android:scaleType="fitXY"
            android:src="@drawable/preset_photo" />

        <RadioGroup
            android:id="@+id/driver_radioGroup1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <RadioButton
                android:id="@+id/driver_radio0"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/driver_checkbox1" />

            <RadioButton
                android:id="@+id/driver_radio1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="@string/driver_checkbox2" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp" >

        <TextView
            android:id="@+id/driver_tv1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffff00"
            android:ems="10"
            android:gravity="center"/>

        <TextView
            android:id="@+id/driver_tv2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffcc00"
            android:ems="10"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp" >

        <TextView
            android:id="@+id/driver_tv3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff9900"
            android:ems="10"
            android:gravity="center" />

  

        <TextView
            android:id="@+id/driver_tv4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff6600"
            android:ems="10"
            android:gravity="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/driver_textView5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:hint="自己的定位" />

    <Button
        android:id="@+id/driver_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="開始/結束" />

    <ListView
        android:id="@+id/driver_listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout><!-- From: file:/D:/Bug-office/ADT/workspace/calldriver/res/layout/activity_driver.xml -->